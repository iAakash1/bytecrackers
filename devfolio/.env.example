# Global Environment Variables
# Copy this file to .env and fill in your actual values

# Project Information
PROJECT_NAME=ai-deepfake-authenticity-checker
ENVIRONMENT=development

# Blockchain Configuration
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here

# Private Keys (NEVER COMMIT THESE TO VERSION CONTROL)
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Chainlink Configuration
CHAINLINK_SUBSCRIPTION_ID=your_chainlink_subscription_id
CHAINLINK_DON_ID=fun-polygon-mumbai-1

# IPFS Configuration
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# WalletConnect
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Service URLs
AI_SERVICE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database (if using one for analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/deepfake_checker

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Security
JWT_SECRET=your_jwt_secret_here
API_SECRET_KEY=your_api_secret_key_here

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100
MAX_REQUESTS_PER_DAY=1000

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_BATCH_SIZE=10

# AI Model Configuration
CONFIDENCE_THRESHOLD=0.8
PROCESSING_TIMEOUT=60

# Contract Deployment
VERIFICATION_FEE=0.001  # ETH
NFT_MINT_FEE=0.01      # ETH
GAS_LIMIT=300000

# Development
DEBUG=true
LOG_LEVEL=info
